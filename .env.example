# Copy this file to `.env` and fill in values as needed.

# Required
OPENAI_API_KEY=

# Core model configuration
# Default is "gpt-5" in code; set explicitly here if desired.
# Example alternative: gpt-4.1-mini
OPENAI_MODEL=

# File paths
# Path to input CSV (must contain at least columns: Provider, Link)
INPUT_CSV=input.csv
# Path where results are written/appended
OUTPUT_CSV=output.csv

# Logging
APP_LOG_LEVEL=INFO          # DEBUG, INFO, WARNING, ERROR
NO_COLOR=0                  # 1 to disable ANSI colors in logs

# OpenAI client behavior
OPENAI_REQUEST_TIMEOUT=60   # seconds
OPENAI_MAX_RETRIES=1        # internal retries in OpenAI client
MAX_RETRIES=6               # outer retry loop for our requests

# Rate limiting & batching
RATE_LIMIT_RPM=1            # requests per minute target (approx)
BATCH_SIZE=1                # rows per batch before cooldown
BATCH_PAUSE_SECONDS=15      # cooldown between batches (seconds)

# Optional features / flags
ENABLE_WEB_SEARCH=1         # 1 to enable web_search_preview tool (if available), else 0
DISABLE_RESPONSES_FORMAT=0  # 1 to avoid Responses.response_format JSON schema path
FORCE_CHAT_COMPLETIONS=0    # 1 to force Chat Completions path
FORCE_RESPONSES=0           # 1 to force Responses API path
SKIP_OPENAI_HEALTH_CHECK=0  # 1 to skip model availability check at startup
CLEAR_OUTPUT_FILE=0         # 1 to clear output file and write header only at start
